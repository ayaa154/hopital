<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" xmlns:fx="http://javafx.com/fxml" fx:controller="UserFormController" style="-fx-padding: 20;">
    <Label fx:id="titleLabel" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <TextField fx:id="nomField" promptText="Nom" />
    <TextField fx:id="prenomField" promptText="Prénom" />
    <TextField fx:id="emailField" promptText="Email" />
    <ComboBox fx:id="roleCombo" promptText="Rôle" />
    <PasswordField fx:id="passwordField" promptText="Mot de passe" />

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Annuler" onAction="#handleCancel" />
        <Button text="Enregistrer" onAction="#handleSave" />
    </HBox>
</VBox>
