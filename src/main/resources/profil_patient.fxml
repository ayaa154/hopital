<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="ProfilPatientController">
    <left>
        <VBox spacing="10" style="-fx-background-color: #D3D3D3;">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Button text="Profil Patient" onAction="#handleProfilPatient"/>
            <Button fx:id="btnDossierMedical" text="Dossier Médical" onAction="#handleDossierMedical" />
            <Button fx:id="btnMesRendezVous" text="Mes Rendez-vous" onAction="#handleMesRendezVous" />

        </VBox>
    </left>
    <center>
        <VBox spacing="10">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <Label text="Profil Patient" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
            <GridPane hgap="10" vgap="10">
                <Label text="Nom:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="txtNom" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                <Label text="Prénom:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="txtPrenom" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                <Label text="Email:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="txtEmail" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                <Label text="Téléphone:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextField fx:id="txtTelephone" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                <Label text="Adresse:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <TextField fx:id="txtAdresse" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
            </GridPane>
            <Label text="Antécédents:"/>
            <TextArea fx:id="txtAntecedents" prefRowCount="4" wrapText="true"/>
            <GridPane hgap="10" vgap="10">
                <Label text="Nouveau mot de passe:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <PasswordField fx:id="txtNewPassword" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                <Label text="Confirmer le mot de passe:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <PasswordField fx:id="txtConfirmPassword" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            </GridPane>
            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Button text="Mettre à jour" onAction="#handleUpdate"/>
                <Button text="Changer le mot de passe" onAction="#handleChangePassword"/>
                <Button text="Fermer" onAction="#handleClose"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>
