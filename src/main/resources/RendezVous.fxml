<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="RendezVousController" fx:id="rootPane">

    <center>
        <VBox spacing="15" alignment="CENTER">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <!-- Titre principal -->
            <Label text="📅 Gestion des Rendez-vous" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

            <!-- Label des messages juste en dessous -->
            <HBox alignment="CENTER">
                <Label fx:id="messageLabel" style="-fx-text-fill: green; -fx-font-weight: bold;" />
            </HBox>

            <HBox spacing="10" alignment="CENTER" style="-fx-padding: 10;">
                <TextField fx:id="searchField" promptText="Rechercher par nom médecin, patient ou ID" />
                <Button text="🔍 Rechercher" onAction="#rechercherRdv" />
                <Button text="↻ Réinitialiser" onAction="#rafraichirTableau" />
            </HBox>

            <TableView fx:id="tableRdv" prefHeight="300">
                <columns>
                    <TableColumn fx:id="idCol" text="ID"/>
                    <TableColumn fx:id="patientCol" text="Patient"/>
                    <TableColumn fx:id="medecinCol" text="Médecin"/>
                    <TableColumn fx:id="dateCol" text="Date/Heure"/>
                    <TableColumn fx:id="motifCol" text="Motif"/>
                    <TableColumn fx:id="statutCol" text="Statut"/>
                </columns>
            </TableView>

            <HBox spacing="10" alignment="CENTER">
                <Button text="Créer RDV" onAction="#ouvrirFormulaireAjout"/>
                <Button text="Modifier RDV" onAction="#ouvrirFormulaireModification"/>
                <Button text="Annuler RDV" onAction="#annulerRdv"/>
            </HBox>
        </VBox>
    </center>

    <!-- Bouton Retour au menu en bas à droite -->
    <bottom>
        <HBox alignment="BOTTOM_RIGHT">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Button text="⬅ Retour au menu" onAction="#retourMenu"/>
        </HBox>
    </bottom>

</BorderPane>
