<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="ConnexionController"
            fx:id="loginPane"
            stylesheets="@login.css"
            prefWidth="700" prefHeight="500">

    <children>
        <StackPane prefWidth="700" prefHeight="500">
            <VBox spacing="15" alignment="CENTER" maxWidth="300"
                  style="-fx-background-color: rgba(255,255,255,0.8); -fx-padding: 30; -fx-background-radius: 10;">
                <Label text="Connexion" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                <TextField fx:id="emailField" promptText="Email" style="-fx-font-size: 14px;" />
                <PasswordField fx:id="passwordField" promptText="Mot de passe" style="-fx-font-size: 14px;" />
                <Button text="Connexion" onAction="#verifierConnexion"
                        style="-fx-background-color: #3498db; -fx-text-fill: white;" />
            </VBox>
        </StackPane>
    </children>
</AnchorPane>

