<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="DossierMedicalController">
    <left>
        <VBox spacing="10" style="-fx-background-color: #D3D3D3;">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Button text="Profil Patient" onAction="#handleProfilPatient"/>
            <Button text="Mes Rendez-vous" onAction="#handleMesRendezVous"/>
            <Button text="Dossier Médical" onAction="#handleDossierMedical" style="-fx-font-weight: bold;"/>
        </VBox>
    </left>
    <center>
        <VBox spacing="15">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Label text="Dossier Médical" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>


            <GridPane hgap="10" vgap="10">
                <Label text="Nom:" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                <Label fx:id="lblNom" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Prénom:" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                <Label fx:id="lblPrenom" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Âge:" GridPane.rowIndex="2" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                <Label fx:id="lblAge" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
            </GridPane>

            <!-- Antécédents -->
            <Label text="Antécédents médicaux:" style="-fx-font-weight: bold;"/>
            <TextArea fx:id="txtAntecedents" editable="false" wrapText="true" prefHeight="100"/>

            <!-- Dernières Consultations -->
            <Label text="Historique des consultations:" style="-fx-font-weight: bold;"/>
            <TableView fx:id="tableConsultations" prefHeight="200">
                <columns>
                    <TableColumn fx:id="dateColumn" text="Date" prefWidth="120"/>
                    <TableColumn fx:id="medecinColumn" text="Médecin" prefWidth="150"/>
                    <TableColumn fx:id="diagnosticColumn" text="Diagnostic" prefWidth="250"/>
                </columns>
            </TableView>

            <!-- Prescriptions -->
            <Label text="Prescriptions actuelles:" style="-fx-font-weight: bold;"/>
            <TextArea fx:id="txtPrescriptions" editable="false" wrapText="true" prefHeight="100"/>
        </VBox>
    </center>
</BorderPane>